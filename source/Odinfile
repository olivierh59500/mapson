# Build mapSoN.

mapson == %mapson.c.sm +lib=(libexceptions/libexceptions.a) \
                       +lib=(librfc822/librfc822.a) \
                       +lib=(libmpools/libmpools.a) \
                       +lib=(liblists/liblists.a) \
		       +lib=db \
		       :exe

%mapson.c.sm == <<
    address_db.c
    array.c
    confirm.c
    cookie.c
    escape_from.c
    fail_safe.c
    get_user_name.c
    home_dir.c
    is_confirmation.c
    loadfile.c
    log.c
    mail_rescue.c
    mailbox_path.c
    main.c
    md5.c
    parse_mail.c
    ruleset.l +lex_prefix='rlst_' :c
    save_to.c
    spool.c
    spool_dir.c
