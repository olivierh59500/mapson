# Build mapSoN.

mapson == %mapson.cc.sm +cxx_flags='-Wall -pedantic' \
			+lib=(librfc822.a) \
			+optimize=2 \
			:exe

%mapson.cc.sm == <<
    mapson.cc
    extract-addresses.cc
    address-db.cc
    home-dir.cc
    process-ack.cc

librfc822.a     == librfc822/%librfc822.a.sm :a

%clean ! == !<<
    rm -f librfc822.a mapson
